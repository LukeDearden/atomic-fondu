<script>
    install_modal = {
        'remove_all' : function(){
            $('#install_modal_overlay').off().remove();
            $('.install_instructions').off().remove();
        },
        'show_overlay' : function(step,os_name){
            if(step == undefined) {
                step = '1';
            }
            if(os_name == undefined) {
                os_name = 'windows_10';
            }
            if( $('#install_modal_overlay').length == 0) {
                $('body').append('<div id="install_modal_overlay" class="overlay"></div>');
            }
            $('#install_modal_overlay').off().click(function(){
                install_modal.remove_all();
            }).show();

            $(document.body).on('click', '.close_modal_mask' ,function(){
                install_modal.remove_all();
            }).show();

            if( $('.install_instructions').length == 0 ) {
                $('body').append('<div class="install_instructions"></div>');
            }

            var inst = $('.install_instructions');
            inst.html('');
            inst.append('<div class="wrap">'+install_modal.gen_html(step,os_name)+'</div>');
            inst.find('.dot').off().click(function(e){
                e.preventDefault();
                install_modal.show_overlay($(this).attr('step'), $(this).attr('os_name'));
            });

            inst.show();

            document.onkeydown = function(e) {
                if ( !inst.find('.wrap .dots .doots .dot').last().hasClass('current') &&  e.which === 39) {
                    e.preventDefault();
                    var cstep = $('.install_instructions .wrap .dots .doots .dot.current').attr('step');
                    install_modal.show_overlay(parseInt(cstep)+1, os_name);
                } else if (!inst.find('.wrap .dots .doots .dot').first().hasClass('current') && e.which === 37) {
                    var cstep = $('.install_instructions .wrap .dots .doots .dot.current').attr('step');
                    install_modal.show_overlay(parseInt(cstep)-1, os_name);
                }
                e.preventDefault(); // prevent the default action (scroll / move caret)
            };

            if ( ! inst.find('.wrap .dots .doots .dot').last().hasClass('current') ) {
                inst.find('._show_next').show().off().click(function(e) {
                    e.preventDefault();
                    var cstep;
                    cstep = $('.install_instructions .wrap .dots .doots .dot.current').attr('step');
                    install_modal.show_overlay(parseInt(cstep)+1, $(this).attr('os_name'));
                });
            }
            if ( ! inst.find('.wrap .dots .doots .dot').first().hasClass('current') ) {
                inst.find('._show_prev').show().off().click(function(e) {
                    e.preventDefault();
                    var cstep;
                    cstep = $('.install_instructions .wrap .dots .doots .dot.current').attr('step');
                    install_modal.show_overlay(parseInt(cstep)-1, $(this).attr('os_name'));
                });
            }

            $('.side1 #download-drive-link').on('click', function(e) {
                e.preventDefault();
                var osNamesSearchMap = {
                  "windows_8": "Windows",
                  "linux": "Linux"
                }

                var osNamesDownloadMap = {
                  "windows_8": "Windows 10",
                  "linux": "Electron"
                }

                var userOS = detectOS();

                if (userOS.indexOf(osNamesSearchMap[os_name]) !== -1) {
                  call.downloadDrive(false, false, true);
                } else {
                  call.downloadDrive(osNamesDownloadMap[os_name], false, true);
                }

            });
        },
        'gen_html' : function(step_name,os_name){

            step = install_modal['install_data'][os_name][step_name];

            html_ = '<div class="install_images"><div class="install_inner">';
                html_ += '<div><img src="'+CDN+step['image']+'" alt="" /></div>';
                html_ += '<div class="_show_prev" os_name="'+os_name+'" style="display:none;"> <a href="" class="prev"> <span><em></em></span> </a> </div>';
                html_ += '<div class="_show_next" os_name="'+os_name+'" style="display:none;"> <a href="" class="next"> <span><em></em></span> </a> </div>';
                html_ += '<div class="dots"><div class="doots">';
                    $.each(install_modal['install_data'][os_name],function(k,v){
                        cl = "";
                        if(k == step_name) {
                            cl = "current";
                        }
                        html_ += '<a os_name="'+os_name+'" step="'+k+'" href="#" class="dot '+cl+'"></a>';
                    });
                html_ += '</div></div>';
                html_ += '<div class="side1">'+step['text']+'</div>';
            html_ += '</div><div class="close_modal_mask"></div></div>';

            return html_;
        },


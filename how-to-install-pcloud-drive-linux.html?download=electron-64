<script>
String.prototype.between = function(prefix, suffix) {
      s = this;
      var i = s.indexOf(prefix);
      if (i >= 0) {
        s = s.substring(i + prefix.length);
      }
      else {
        return '';
      }
      if (suffix) {
        i = s.indexOf(suffix);
        if (i >= 0) {
          s = s.substring(0, i);
        }
        else {
          return '';
        }
      }
      return s;
};

    var selected_current_os,change_os;
    selected_current_os = 'linux';

    $(function(){
        function checkUserEligibleForDiscount() {
            const userHasLifetimePlan = pCloud.user && pCloud.user.premiumlifetime;
            const userHasBusinessPlan = pCloud.user && pCloud.user.business;

            return !pCloud.user || !(userHasLifetimePlan || userHasBusinessPlan);
        }

        $('body').addClass('page_download');
        $(".install_quide").last().addClass("last-guide");
        $('.get_pcloud_desktop_and_mobile').hide();
        $('#download-drive-link').on('click', function(e) {
            e.preventDefault();
            call.downloadDrive('Electron', false, true);
        });

        if (checkUserEligibleForDiscount()) {
            $(".get_discount_wrapper").show(0);
        }

        if (pCloud.osShort == 'ios') {
            $('.download_ios, .drive-for-pc, .drive-for-pc-link').show();
        } else if (pCloud.osShort == 'android') {
            $('.download_android, .drive-for-pc, .drive-for-pc-link').show();
        } else {
            $('#middle_box').parent().removeClass('hide-for-small');
        }

        $('._change_os').click(function(e){
            el = $(this);
            e.preventDefault();
            $('._change_os').removeClass('active');
            el.addClass('active').css({'padding-bottom':'26px'});
            key = el.attr('os');
            data = install_modal.install_data[key];

            $.each(data,function(k,v){
                $('#downloads .install_quide .install_img:eq('+parseInt(k-1)+')').find('img').attr('src',CDN + v['image']);
            });

            $('.reg_buttons').hide();
            $('#middle_box').find('#'+key+'_buttons').show();
            selected_current_os = key;

            src_ = 'images/download/tv_win.png';

            if(key == "windows_8") {
                $('._how_to_install').html( $('._how_to_install').attr('txt') + " Windows" );
                src_ = 'images/download/tv_win.png';
            }else if(key == "mac") {
                $('._how_to_install').html( $('._how_to_install').attr('txt') + " Mac OS" );
            src_ = 'images/download/tv_mac.png';
            }else if(key == "linux") {
                $('._how_to_install').html( $('._how_to_install').attr('txt') + " Linux" );
                src_ = 'images/download/tv_linux.png';
            }
            $('.selected_tv img').attr('src',CDN + src_);

           var t, tmp;
           t = $('.white_container:eq(0)').find('.txt');
           tmp = $.trim(t.text());
           tmp = tmp.split(" ");
           tmp = tmp.join(" ");
           t.html(tmp);
           t.find('a').off().click(function(e){
               e.preventDefault();
               if(key == "mac") {
                   $('#mac_buttons a').first().trigger('click');
               } else if (key =="windows_8") {
                   if(pCloud.os == "Windows 8") {
                       $('#windows_8_buttons a').first().trigger('click');
                   }else if(pCloud.os == "Windows 7") {
                       $('#windows_8_buttons a').first().trigger('click');
                   }else {
                       $('#windows_8_buttons a').last().trigger('click');
                   }
               }else if(key == "linux") {
                   var check_string;
                   check_string = navigator.appVersion;
                   if( navigator.userAgent.toLowerCase().indexOf('chrome') > -1 ) {
                        check_string = navigator.appVersion;
                    }else if(  navigator.userAgent.toLowerCase().indexOf('firefox') > -1 ) {
                        check_string =  navigator.userAgent;
                    }
                   if(check_string.indexOf("Linux i686")!=-1) {  key = "Linux32"; }
                   if(check_string.indexOf("Linux x86_64")!=-1) {  key = "Linux64"; }
                   if(key == "Linux32") {
                       $('#linux_buttons a').first().trigger('click');
                   }else if(key == "Linux64") {
                       $('#linux_buttons a').last().trigger('click');
                   }
               }
           });
       });

        // force
        $.cookie('_download_now','1');

        $(".get_discount").on("click", function() {
            if (typeof gaAll == 'function') {
              gaAll('event', 'Buy Lifetime - Download Page', 'click');
            }
            window.open("/cloud-storage-pricing-plans.html?step=purchase&product=premium-plus&period=lifetime", "_self");
        })

        if (navigator.userAgent.indexOf('Mac') != -1) {
            $('._change_os[os="mac"]').trigger('click');
            if ( $.cookie('_download_now') == undefined )  {
                if(pCloud.osShort != 'ios') {
                    $('#mac_buttons').find('a[os1="macos"]').addClass('download_now');
                    $.cookie('_download_now','1');
                }
            }
        }else if( navigator.userAgent.indexOf('Linux')  != -1 || navigator.userAgent.indexOf('X11')  != -1) {
            $('._change_os[os="linux"]').trigger('click');
        }else {
            $('._change_os[os="windows_8"]').trigger('click');

            if(pCloud.os == "Windows 8") {
                if($.cookie('_download_now') == undefined) {
                    $('#windows_8_buttons').find('a[os1="windows8"]').addClass('download_now');
                    $.cookie('_download_now','1');
                }
            }else if(pCloud.os == "Windows 7") {
                if($.cookie('_download_now') == undefined) {
                    $('#windows_8_buttons').find('a[os1="windows8"]').addClass('download_now');
                    $.cookie('_download_now','1');
                }
            }else if(pCloud.os == "Windows Vista") {
                if($.cookie('_download_now') == undefined) {
                    $('#windows_8_buttons').find('a[os1="windowsvista"]').addClass('download_now');
                    $.cookie('_download_now','1');
                }
            }else if(pCloud.os == "Windows XP" || pCloud.os == "Windows 2000" ) {
                if($.cookie('_download_now') == undefined) {
                    $('#windows_8_buttons').find('a[os1="windowsxp"]').addClass('download_now');
                    $.cookie('_download_now','1');
                }
            }else {

            }
        }


        $.each($('.reg_buttons a.download'), function(k,v){
            el = $(this);
            pcloud.apiCall('showpublink', {code: el.attr('code')}, $.proxy(function(data){
                var el;
                el = $(this.sel);
                if ( data.metadata.icon != "folder" ) {
                    el.find('span').html('(' + download_actions.humanFileSize(data.metadata.size,1024) + ')');
                    el.off().click(function(e){
                        e.preventDefault();
                        pcloud.apiCall('getpublinkdownload', {code: el.attr('code')}, function(data){
                            $('html,body').animate({ scrollTop: $('.install_quide').offset().top-70 }, 1000);
                            window.location = "//"+data.hosts[0] + '' + data.path;
                        });
                    });
                    imagesLoaded( document.querySelector('.install_img'), function( instance ) {
                        $('body').addClass('loaded_images');
                    });

                    if(el.hasClass('download_now')) {

                        var imgLoad = imagesLoaded( document.querySelector('body') );
                        imgLoad.on( 'always', function(instance) {
                            setTimeout($.proxy(function(){ el.click(); }, el),10);
                        });
                    }
                }else {
                    el.off().click(function(e){
                        window.location = myPcloudURL + '#page=publink&code='+el.attr('code');
                    });
                }
            },{'sel':el}));
        });

        login_callback = function() {
            if (checkUserEligibleForDiscount()) {
                $(".get_discount_wrapper").show();
            } else {
                $(".get_discount_wrapper").hide();
            }
        };

        logout_callback = function() {
            $(".get_discount_wrapper").show();
        }
    });

</script>

